<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="top"
    android:orientation="vertical"
    android:paddingBottom="10dp" android:paddingLeft="10dp" android:paddingRight="10dp">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true" >

        <LinearLayout
            android:id="@+id/calendarPopLinearLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:orientation="vertical" android:paddingBottom="5dp">
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="70dp"
        android:layout_height="5dp"
        android:layout_below="@+id/scrollView1" android:layout_alignParentRight="true" android:background="@drawable/divider" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:layout_marginRight="6dp"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total:" android:layout_below="@+id/imageView1"/>

    <TextView
        android:id="@+id/calendarPopTotalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0" android:layout_alignBaseline="@+id/textView1" android:layout_toRightOf="@+id/textView1" android:layout_alignParentRight="true" android:gravity="right" android:layout_marginRight="15dp"/>

</RelativeLayout>